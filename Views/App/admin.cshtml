@using static common_morph_backend.AppDbContext;
@{
  ViewData["Title"] = "Admin";
  Layout = "~/Views/Shared/_App.cshtml";
}
<div class="accordion">
  <div class="accordion-item">
    <div class="accordion-header">Users Managment</div>
    <div class="accordion-content">

      <label>
        <span class="addButton" id="btnInviteUser">
          <span class="material-icons">add</span>
          Invite Users
        </span>
      </label>

      <ul id="lstUsers" class="list"></ul>

      <div id="frmChangeRole" class="form">
        <form onsubmit="ChangeRole(); return false;">
          <label>Change the role of the user:</label>
          <input type="hidden" id="userIdToChange" />
          <div class="field">
            <label>Email:</label>
            <span id="userEmail"></span>
            <label>Current Role:</label>
            <span id="currentRole"></span>
          </div>
          <div class="field">
            <label>Change role to:</label>
            <select id="cmbUserRoleToChange" name="role">
              <option value="0">Admin</option>
              <option value="1">Linguist</option>
              <option value="2" selected>Speaker</option>
              <option value="3">Viewer</option>
            </select>
          </div>
          <div class="field-end">
            <button type="button" id="btnChangeRoleCancel">Cancel</button>
            <button type="submit" id="btnChangeRoleSubmit">Change Role!</button>
          </div>
        </form>
      </div>

      <div id="frmInviteUser" class="form">
        <form onsubmit="InviteUser(); return false;">
          <label>Invite a new user:</label>
          <div class="field">
            <label>Email</label>
            <input type="email" id="txtUserEmail" name="email" required />
          </div>
          <div class="field">
            <label>Role</label>
            <select id="cmbUserRole" name="role">
              <option value="0">Admin</option>
              <option value="1">Linguist</option>
              <option value="2">Speaker</option>
            </select>
          </div>
          <div class="field-end">
            <button type="button" id="btnInviteUserCancel">Cancel</button>
            <button type="submit" id="btnUserSubmit"></button>
          </div>
        </form>
      </div>

    </div>
  </div>

  <div class="accordion-item">
    <div class="accordion-header">Language Varieties</div>
    <div class="accordion-content">
      <label>
        <span class="addButton" id="btnAddLang">
          <span class="material-icons">add</span>
          Add a new variety
        </span>
      </label>

      <ul id="lstLangs" class="list"></ul>

      <div id="frmLang" class="form">
        <form onsubmit="LangSubmit(); return false;">
          <input type="hidden" id="LangId" />
          <div class="field">
            <label for="txtLangTitle">Title</label>
            <input type="text" id="txtLangTitle" name="title" required />
          </div>
          <div class="field">
            <label for="txtLangCode">Code <small>(ISO 639-3)</small></label>
            <input type="text" id="txtLangCode" name="code" required />
          </div>
          <div class="field">
            <label for="txtLangValidChars">Valid Characters</label>
            <input type="text" id="txtLangValidChars" name="ValidChars" />
          </div>
          <div class="field">
            <label for="txtLangDescription">Description</label>
            <textarea id="txtLangDescription" name="description"></textarea>
          </div>
          <div class="field">
            <label>Coordinats</label>
            <input type="number" step="0.0001" id="txtLatitude" name="latitude" />
            <input type="number" step="0.0001" id="txtLongitude" name="longitude" />
          </div>
          <div class="field-end">
            <button type="button" id="btnLangCancel">Cancel</button>
            <button type="submit" id="btnLangSubmit"></button>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>

<div id="popup" class="popup" id="popup">
  <div class="popup-content">
    <div id="closePopup" class="close">&times;</div>
    <div id="popupContent"></div>
  </div>
</div>

<script src="/js/admin.js" asp-append-version="true"></script>