@using Microsoft.AspNetCore.Html
@{
	string hosturl = "https://common-morph.com";
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@Html.Raw(ViewData["Title"])</title>
	<meta name="description" content="@Html.Raw(ViewData["Description"])" />
	<meta name="twitter:title" content="@Html.Raw(ViewData["Title"])" />
	<meta name="twitter:image" content="@Html.Raw(ViewData["PageImage"])" />
	<meta name="twitter:card" content="summary" />
	<meta property="og:title" content="@Html.Raw(ViewData["Title"])" />
	<meta property="og:type" content="website" />
	<meta property="og:image" content="@hosturl/logo.png" />
	<meta property="og:url" content="@hosturl" />
	<meta property="og:site_name" content="CommonMorph" />
	<link rel='icon' href='/favicon.ico' type='image/x-icon' />
	<link rel="shortcut icon" sizes="196x196" href="/logo196.png" />
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
		integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
		integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
	<link rel="stylesheet" href="/css/style.css" asp-append-version="true">
</head>

<body dir="ltr">
	<div class="wrapper">
		<div class="header">
			<div class="nav">
				<a href="/" class="brand">
					<div class="logo">CM</div>
					<div>
						<div class="title">CommonMorph</div>
						<div class="slogan">Participatory Morphological Documentation</div>
					</div>
				</a>
				<div>
					<a href="/about">About</a>
					<a href="/datasets">Datasets</a>
					@if (!User.Identity.IsAuthenticated)
					{
						<a class="button" href="/user/login">Log In</a>
					}
					else
					{
						<a class="button" href="/app/">Contribute!</a>
					}
				</div>
			</div>
		</div>
		<div class="main">
			@RenderBody()
		</div>
		<div class="footer">
			<div>
				<div class="footer-left">Â© 2025 CommonMorph</div>
				<div class="footer-right">
					<div><a href="/tutorials">Tutorials</a></div>
					<div><a href="/about">About</a></div>
					<div><a href="/privacy">Privacy</a></div>
				</div>
			</div>
		</div>
	</div>
</body>

</html>